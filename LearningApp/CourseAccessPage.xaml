<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningApp.CourseAccessPage"
             Title="دسترسی به دوره">
    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">
            <Label Text="جلسات دوره" FontSize="20" FontAttributes="Bold"/>

            <CollectionView x:Name="LessonsCollection"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="LightGray"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 10"
                                Padding="10"
                                Margin="0,5">
                            <VerticalStackLayout Spacing="5">

                                <!-- عنوان جلسه -->
                                <Label Text="{Binding Title}" FontSize="16" FontAttributes="Bold"/>

                                <!-- لینک جلسه -->
                                <Label Text="{Binding DownloadLink}" 
                                       TextColor="Blue"
                                       FontSize="14"
                                       LineBreakMode="TailTruncation">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Link_Tapped"/>
                                    </Label.GestureRecognizers>
                                </Label>

                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
